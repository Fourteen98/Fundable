<section class="p-4 h-full gradient-form bg-main-splash min-h-screen ">
  <div class="container py-12 px-6 h-full ">
    <div class="w-full flex flex-col items-center justify-center">
      <%= image_tag 'logo-1.png', :alt => 'user-logo', class: 'w-full rounded-l mx-auto w-48' %>
      <h4 class="text-xl font-semibold mt-1 mb-12 pb-1">Log In</h4>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{ class: "lg:w-6/12 px-4 md:px-0"}) do |f| %>
      <p class="mb-4">Please login to your account</p>
      <div class="mb-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email',class:"form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
        %>
      </div>

      <div class="mb-4">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: "form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
        %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="text-center pt-1 mb-12 pb-1">
        <%= f.submit "Log in", class: "bg-main-second inline-block px-6 py-2.5 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:shadow-lg focus:outline-none focus:ring-0 active:shadow-lg transition duration-150 ease-in-out w-full mb-3"
        %>
      </div>
    <% end %>
    <div class="flex items-center justify-between pb-6">
      <p class="mb-0 mr-2">Don't have an account?</p>
      <%= link_to 'Sign Up', new_user_registration_path, class: "inline-block px-6 py-2 border-2 border-red-200 text-red-600 font-medium text-xs leading-tight uppercase rounded hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out" %>
    </div>

    <%#= render "devise/shared/links" %>

  </div>
</section>