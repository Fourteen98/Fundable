<section class="w-full bg-white h-screen flex items-center justify-center p-4">
  <div class="w-full h-full flex flex-col items-center justify-between items-center">
    <div class="w-full h-1/2 flex flex-col justify-end items-center">
      <%= image_tag @logo, :alt => 'user-logo', class: 'w- rounded-l' %>

    </div>
    <div class="flex flex-col justify-end h-1/2 w-full">
      <%= link_to "Sign In", new_user_session_path, class:"text-white h-12 bg-main from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 font-medium rounded-sm text-sm px-5 py-2.5 text-center mr-2 mb-2"%>
      <%= link_to "Sign Up", new_user_registration_path, class:"text-white h-12 bg-main from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 font-medium rounded-sm text-sm px-5 py-2.5 text-center mr-2 mb-2"%>

      <%#= button_to "Log out", destroy_user_session_path, method: :delete, class:"text-white bg-gradient-to-r from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2"%>

    </div>

  </div>
</section>